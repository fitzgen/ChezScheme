m = a6nt
Cpu = X86_64

clib=
o = obj
mdobj=windows.$o
mdsrc=windows.c Makefile.$m cs.ico scheme.rc make.bat
mdclean=vs.bat make.bat scheme.res ../bin/$m/*.exp mtscheme.exe* mdscheme.exe*

include Mf-base

# currently creating datestamp at 'make source' time
datestamp.c:

vs.bat:
	echo '@echo off' > vs.bat
	echo 'call "%%VS140COMNTOOLS%%..\..\VC\vcvarsall.bat" amd64' >> vs.bat
	echo '%*' >> vs.bat
	chmod +x vs.bat

make.bat: vs.bat
	echo "@call vs.bat nmake /nologo -f Makefile.$m %*" > make.bat
	chmod +x make.bat
